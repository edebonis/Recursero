<div class="formulario">
<%= form_for :lugar, url: lugares_path do |f| %>
  <p>
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre %>
  </p>

  <p>
    <%= f.label :direccion %><br>
    <%= f.text_field :direccion %>
  </p>

  <p>
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </p>

  <p>
    <%= f.label :clasificacion %><br>
    <%= f.select(:clasificacion, options_for_select(@lugar.clasificaciones)) %>
  </p>
 
  <p>
    <%= f.label :contacto %><br>
    <%= f.text_field :contacto %>
  </p>
 
 
  <p>
    <%= f.submit 'Guardar' %>
  </p>

<% end %>
</div>